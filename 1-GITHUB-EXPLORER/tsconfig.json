{
  "compilerOptions": {
    // Adiciona algumas funcionalidades para o meu c√≥digo
    // DOM - ele entende que eu vou mexer com a arvore dom do meu projeto JS
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    "moduleResolution": "node",

    "resolveJsonModule": true,

    "allowJs": true,

    "noEmit": true,

    "isolatedModules": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}
